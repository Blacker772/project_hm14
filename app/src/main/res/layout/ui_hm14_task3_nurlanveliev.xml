<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:padding="40dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logopng"
            android:layout_marginStart="62dp"
            android:layout_above="@id/text1"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/text1"
           android:text="Unleash your creativity and let your artistic vision soar."
           android:textStyle="bold"
           android:textSize="20sp"
           android:layout_above="@id/text2"
           android:layout_marginTop="43dp"
           android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="Unleash the Magic of Creation!"
            android:textSize="19sp"
            android:textStyle="normal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="112dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="62dp"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP WITH FACEBOOK"
            android:textSize="16sp"
            app:icon="@drawable/ic_logo"
            app:iconGravity="start"
            app:cornerRadius="13dp"
            android:backgroundTint="#3A5998"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP WITH EMAIL"
            android:backgroundTint="#228812"
            app:icon="@drawable/ic_letter"
            app:iconGravity="start"
            android:layout_marginTop="26dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="47dp"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textSize="16sp"
                android:textColor="#00B5EE"/>
        </LinearLayout>




    </LinearLayout>



</LinearLayout>